#include <stdlib.h> 
#include <ctype.h> 
#include <string.h> 
 
int max = 20; 
char stack [20] ; 
char infix [20]; 
char postfix [20]; 
int top=-1; 
 
int is_empty ( )  
{ 
      return top == -1 ; 
} 
   
void push ( char value ) 
{ 
  if (top == max-1 ) 
 { 
    printf (“\n Stack Overflow \n”) ; 
    return ; 
  } 
 
  else 
  { 
  stack [ ++top ] =  value ;
  } 
}    
 
char pop ( ) 
{ 
  char item ; 
  if ( top == -1 ) 
  {
    printf (“\n Stack underflow \n”) ; 
  } 
  else 
  { 
    return stack [ top ] ; 
  } 
}   
 
int precedence ( char ch ) 
{ 
  if ( ch == ‘+’ || ch == ‘/’ ) 
  { 
    return 1; 
  } 
  else if ( ch == ‘*’ || ch == ‘/’ ) 
  { 
    return 2 ; 
  } 
  else if ( ch == ‘^’ ) 
  { 
    return 3 ;  
  } 
}    
 
int check_operator ( char ch ) 
{ 
  return ( ch == ‘+’ || ch == ‘-’ || ch == ‘*’ || ch == ‘/’ || ch == ‘^' ); 
} 
 
void infix_to_postfix ( ) 
{ 
  int i=0 , j=0; 
  char ch ; 
  while ( infix [ i ] != ‘\0’ ) 
  { 
    ch = infix [ i ] ; 
    if ( isalnum ( ch ) ) 
    { 
      postfix [ j++ ] = pop ( ); 
    } 
    pop ( )  ; 
    else if ( ch == ‘)’ ) 
    { 
      while ( ! is_empty( ) && peek ( ) != ‘(’ ) 
      { 
        postfix [ j++ ] = pop( ); 
      } 
      pop ( ) ; 
    }   
    else if ( check_operator ( ch ) ) 
    { 
      while ( ! is_empty ( ) && precedence ( peek ( ) ) >= precedence ( ch ) ) 
      { 
        postfix [ j++ ] = pop( ); 
      } 
      push ( ch ); 
    } 
    i++ ; 
  } 
  while ( ! is_empty ( ) ) 
  { 
    postfix [ j++ ] = pop( ) ; 
  } 
  postfix [ j ] = ‘ \0 ’ ; 
}       
 
int main ( ) 
{ 
  printf (“\n Enter the infix expression : \n”) ; 
  scanf ( “ %[^\n] ” , infix ) ; 
 
  if ( infix [ strlen ( infix )-1 ] == ‘ \n ’ ) 
  { 
    infix [ strlen ( infix ) - 1 ] = ‘ \0 ’ ; 
  } 
 
  infix_to_postfix ( ) ; 
  printf (“\n Postfix expression is : %s \n “ , postfix ) ; 
}


Output : 
Enter the infix expression :  
a+b-c*d 
 
Postfix expression is : ab+cd*-  
